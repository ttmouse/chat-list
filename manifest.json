{
  "manifest_version": 3,
  "name": "话术助手",
  "version": "1.4.1",
  "description": "在网页右侧显示悬浮话术列表，支持话术管理和自动填充",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils.js", 
        "modules/textarea-utils.js", 
        "modules/data-import-export.js", 
        "modules/script-management.js", 
        "modules/input-detector.js",
        "modules/input-selector.js",
        "modules/content-filler.js",
        "modules/input-manager.js",
        "preview-module.js", 
        "content.js"
      ],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "话术助手"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}